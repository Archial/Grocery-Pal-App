
package grocerypal;

import java.util.*;
import javax.swing.JOptionPane;
import java.text.DateFormat;
import java.util.Scanner;


public class Payments {
    
    
	 //declare variables
   private String cCardMsg = "Please enter your Credit Card# ";
   private String pmtMsg = "Please have your payment method ready for checkout.";
   private String tyMsg = "Thank you!";
   private String tyMsg2 = "Thank you! We appreciate your business!"; 
   private String errMsg1 = "Invalid. Please try again";
   private String creditCardNumber;
   private String expMsg = "Please enter your Cards' Expiration date as mmyy: ";
   private String csv = "Please enter the 3 digit CSV on the back of your card: ";
   private String support = "Please contact support at 1-800-555-1212 for further assistance";
   
   //private String input = "input";
    
   
    
public String getCreditCardInput (String cCardMsg){
cCardMsg = "Please enter your Credit Card number: ";
String input;
int failCount= 0;



while (true){
input = JOptionPane.showInputDialog(cCardMsg);
if (input == null || ! input.equals("input")) {
                    
         failCount = failCount + 1;
            if (failCount > 2) {
                JOptionPane.showMessageDialog(null, support);
                System.exit(0);
					
                        }//end inner if
            
        JOptionPane.showMessageDialog(null, errMsg1);
			
			} //end outer if
                        
                        
            else {
                    
            JOptionPane.showMessageDialog(null,tyMsg);
                    
                break;
                                
                        
                    }//end else
                        
    }//end while
    return input;
                

}//end CC getter

public String getExpiration(){

String input;
int failCount= 0;


while (true){
input = JOptionPane.showInputDialog(null, expMsg);//expMsg string not required since not listed as parameter

if (input == null ||! input.equals("1122")) {
    
failCount = failCount +1;

if (failCount > 2) {
    
    JOptionPane.showMessageDialog(null, support);
    System.exit(0);
}//end inner if 
JOptionPane.showMessageDialog(null, errMsg1);


}//end outer if
else {

JOptionPane.showMessageDialog(null, tyMsg);

break;

}//end else

}//end while
return input;
}//end getexpiration

public String getCSV(){
String input;
int failCount = 0;
while (true){
input = JOptionPane.showInputDialog(null, csv);

if (input == null ||! input.equals("123")) {
    
failCount = failCount +1;

if (failCount > 2) {
    
    JOptionPane.showMessageDialog(null, support);
    System.exit(0);
}//end inner if 
JOptionPane.showMessageDialog(null, errMsg1);


}//end outer if
else {

JOptionPane.showMessageDialog(null, tyMsg);

break;

}//end else

}//end while
return input;

}//end get csv

}//end payment
